@model ECommerceSystem.GUI.Models.PetDetailViewModel
@using ECommerceSystem.Shared.Enums
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id" />

@* Hiển thị ảnh hiện tại nếu có (chỉ xảy ra ở trang Edit) *@
@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <div class="form-group mb-3">
        <label class="form-label">Ảnh hiện tại</label>
        <div>
            <img src="@Model.ImageUrl" class="rounded" style="width: 150px; height: auto;" alt="Ảnh thú cưng" />
        </div>
        <input type="hidden" asp-for="ImageUrl" />
    </div>
}

<div class="form-group mb-3">
    <label asp-for="ImageFile" class="form-label">Tải ảnh mới</label>
    <input asp-for="ImageFile" class="form-control" type="file" />
    <span asp-validation-for="ImageFile" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="Price" class="form-label"></label>
    <input asp-for="Price" class="form-control" type="number" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="Breed" class="form-label"></label>
    <input asp-for="Breed" class="form-control" />
    <span asp-validation-for="Breed" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="Location" class="form-label"></label>
    <input asp-for="Location" class="form-control" />
    <span asp-validation-for="Location" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="HealthStatus" class="form-label"></label>
    <input asp-for="HealthStatus" class="form-control" />
    <span asp-validation-for="HealthStatus" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="DateOfBirth" class="form-label"></label>
    <input asp-for="DateOfBirth" class="form-control" type="date" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="Gender" class="form-label"></label>
    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select"></select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="PetType" class="form-label"></label>
    <select asp-for="PetType" asp-items="Html.GetEnumSelectList<PetTypes>()" class="form-select"></select>
    <span asp-validation-for="PetType" class="text-danger"></span>
</div>

@* Có thể dùng để test hoặc quản lý trạng thái *@
<div class="form-check mb-2">
    <input asp-for="IsLiked" class="form-check-input" type="checkbox" />
    <label asp-for="IsLiked" class="form-check-label"></label>
</div>

<div class="form-check mb-3">
    <input asp-for="IsAdopted" class="form-check-input" type="checkbox" />
    <label asp-for="IsAdopted" class="form-check-label"></label>
</div>
