@model ECommerceSystem.GUI.Models.PetDetailViewModel
@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<div class="container mx-auto p-4">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden md:flex">
        <div class="md:w-1/2">
            <img src="@Model.ImageUrl" alt="Image of @Model.Name" class="w-full h-full object-cover">
        </div>
        <div class="p-8 md:w-1/2">
            <h1 class="text-3xl font-bold mb-2">@Model.Name</h1>
            <p class="text-gray-600 mb-4">@Model.Description</p>
            <div class="text-2xl text-green-600 font-bold mb-6">
                Giá: @Model.Price.ToString("C0")
            </div>

            <div class="flex items-center space-x-4">
                <!-- Form cho nút Thích/Bỏ thích -->
                <form asp-controller="Pet" asp-action="ToggleLike" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="px-6 py-2 rounded-full text-white font-semibold
                                                 @((Model.IsLiked) ? "bg-pink-500 hover:bg-pink-600" : "bg-gray-300 hover:bg-gray-400")">
                        @((Model.IsLiked) ? "❤️ Bỏ thích" : "🤍 Thích")
                    </button>
                </form>

                <!-- Nút Nhận nuôi (hiển thị có điều kiện) -->
                @if (Model.IsAdopted)
                {
                    <div class="px-6 py-2 rounded-full bg-blue-500 text-white font-semibold">
                        ✅ Đã nhận nuôi
                    </div>
                }
                else
                {
                    <form asp-controller="Pet" asp-action="Adopt" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="px-6 py-2 rounded-full text-white font-semibold bg-teal-500 hover:bg-teal-600">
                            🐾 Nhận nuôi
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>